            setTimeout(function(){
                $(cell) .find('input[type=text]')
                        .datepicker({dateFormat:'yy-mm-dd' , autoclose:true});
            }, 0);
        }
        
    


        //navButtons
        jQuery(grid_selector).jqGrid('navGrid',pager_selector,
                { 	//navbar options
